@{
    ViewData["Title"] = "Kullanıcı";
    Layout = "_AdminLayout";
}


<div class="row pe-2">
<h2>Kullanıcı Ekle</h2>

    <div>
        <div class="mb-2 mt-5">
            <label>Kullanıcı Adı</label>
            <input type="text" id="inputUserName" class="form-control"/>
        </div>
        <div class="mb-2">
            <label>Tam İsim</label>
            <input type="text" id="inputFullName" class="form-control" />
        </div>
         <div class="mb-2">
            <label>Şifre</label>
            <input type="text" id="inputPassword" class="form-control" />
        </div>
        <div class="mb-2">
            <label>Email</label>
            <input type="text" id="inputEmail" class="form-control" />
        </div>
        <button class="btn btn-dark" id="registerbtn">Oluştur</button>
        <div id="divResult"></div>
    </div>


    @section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            var ApiBaseUrl = "@ViewBag.ApiBaseUrl";
            $("#registerbtn").click(function () {

                var username = $("#inputUserName").val();
                var password = $("#inputPassword").val();
                var fullname = $("#inputFullName").val();
                var email = $("#inputEmail").val();

                if (username == "" || password == "" || fullname == "" || email == "") {
                    $("#divResult")
                        .show()
                        .removeClass()
                        .addClass("alert alert-danger")
                        .html("Tüm Alanları Doldurunuz!")
                        .fadeOut(5000);
                    return false;
                }
                var register = new Object();
                register.UserName = username;
                register.Password = password;
                register.FullName = fullname;
                register.Email = email;

                $.ajax({
                    url: ApiBaseUrl + "Authentication",
                    method: "POST",
                    data: JSON.stringify(register),
                    contentType: "application/json",
                    success: function (data) {
                        if (data.status) {
                            location.href = "/Admin/Users";
                        } else {
                            $("#divResult")
                                .show()
                                .removeClass()
                                .addClass("alert alert-danger")
                                .html(data.message)
                                .fadeOut(10000);
                        }
                    },
                    error: function (e) {
                        console.log(e);
                    }
                });
            });

        });
    </script>
    }
