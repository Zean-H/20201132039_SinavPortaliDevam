@{
    ViewData["Title"] = "Profile Settings";
}

<h1>Kullanıcı Bilgileri</h1>
<div class="row">
    <div class="col-md-8">
        <div class="mb-2">
            <label>Adı Soyadı</label>
            <input type="text" id="txtFullName" class="form-control" />
        </div>
        <div class="mb-2">
            <label>Kullanıcı Adı</label>
            <input type="text" id="txtUserName" class="form-control" readonly="readonly" />
        </div>
        <div class="mb-2">
            <label>E-Posta</label>
            <input type="text" id="txtEmail" class="form-control" readonly="readonly" />
        </div>
        <button class="btn btn-dark" id="btnSave">Kaydet</button>

    </div>


    @section Scripts {
        <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.js"></script>

        <script>
            $(document).ready(function () {
                var token = localStorage.getItem("token");
                if (token == "" || token == null) {
                    location.href = "/Home/Login";
                    return false;
                }

                var ApiBaseUrl = "@ViewBag.ApiBaseUrl";
                GetUserInfo();

                function GetUserInfo() {
                    $.ajax({
                        url: ApiBaseUrl + "User/GetUserById/" + userId,
                        type: "Get",
                        contentType: "application/json",
                        headers: {
                            "Authorization": "Bearer " + token
                        },
                        success: function (data) {
                            // console.log(data);
                            $("#txtFullName").val(data.fullName);
                            $("#txtUserName").val(data.userName);
                            $("#txtEmail").val(data.email);

                        },
                        error: function () { }
                    });

                }
                $("#btnSave").click(function () {
                    var fullName = $("#txtFullName").val();
                    var userName = $("#txtUserName").val();
                    var email = $("#txtEmail").val();

                    var register = new Object();
                    register.FullName = fullName;
                    register.UserName = userName;
                    register.email = email;
                    register.Id = userId;

                    $.ajax({
                        url: ApiBaseUrl + "User/Update",
                        type: "Put",
                        contentType: "application/json",
                        headers: {
                            "Authorization": "Bearer " + token
                        },
                        data: JSON.stringify(register),
                        success: function (data) {
                            if (data.status) {
                                $("#divResult")
                                    .show()
                                    .removeClass()
                                    .addClass("alert alert-success")
                                    .html(data.message)
                                    .fadeOut(5000);

                            } else {
                                $("#divResult")
                                    .show()
                                    .removeClass()
                                    .addClass("alert alert-danger")
                                    .html(data.message)
                                    .fadeOut(5000);
                            }

                        },
                        error: function () { }
                    });

                });

            });

        </script>
    }
